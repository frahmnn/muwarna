PORT=5000

# MongoDB
# Development: mongodb://localhost:27017/mern_db
# Production: Use MongoDB Atlas connection string
MONGODB_URI=mongodb://localhost:27017/mern_db

# Google OAuth
# Get credentials from: https://console.cloud.google.com/
# Make sure to add your production URLs to authorized origins and redirect URIs
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT & Session Secrets
# Generate secure random strings for production!
# Example: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret-key

# Client URL
# Development: http://localhost:3000
# Production: Your deployed frontend URL (e.g., https://yourdomain.com)
CLIENT_URL=http://localhost:3000

# Environment
NODE_ENV=development
